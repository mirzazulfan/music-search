@import 'nib'

//keyframes
@keyframes fadeIn
  0%
    transform scale(0)
    opacity 0
  30%
    opacity 1
  100%
    transform scale(1)
    opacity 1

.history
  margin-bottom 20px
  .search
    background-color #f8f8f8
    display inline-block

.search
  > .remove
    border-left 1px solid darken(#f8f8f8, 10%)
    cursor pointer

  > .remove:hover, > .query:hover
    background-color darken(#f8f8f8, 10%)
   > .query
    cursor pointer

.search > .query, .search > .remove 
  float left
  padding 10px

.zoom-out
  width 0
  height 0

.search_result
  opacity 0
  transform scale(0)
  animation-name fadeIn
  animation-timing-function linear
  animation-direction normal
  animation-fill-mode forwards
  animation-duration 300ms
  border 1px solid lightgray
  border-radius 5px
  margin-bottom 20px
  overflow hidden
  position relative


  &:hover .rank
    opacity 1

  .rank
    position absolute
    padding 5px 10px
    color #fff
    background-color rgba(0,0,0,0.6)
    opacity 0
    transition opacity .2s linear
    border-top-left-radius 4px
    border-bottom-right-radius 4px

  .info
    padding 8px 10px


  .album-cover
    > img
      max-width 100%

    .audio
      width 100%
      position absolute
      bottom 0

    $cover-width = 150px
    $cover-margin = 20px
    @media screen and (max-width 768px)
      float left
      width $cover-width
      margin-right $cover-margin
      position static

      > .rank
        opacity 1

      .audio
        padding 0 $cover-margin $cover-margin/2 $cover-width+$cover-margin

      .album-cover
        position relative

$artist-h = 375px
$tag-h = $artist-h - 40
.byArtist .search_result
  height $artist-h

  @media screen and (max-width: 1200px)
    height $artist-h - 45 !important

.byTag .search_result
  height $tag-h

  @media screen and (max-width: 1200px)
    height $tag-h - 45 !important

@media screen and (max-width 768px)
  .byArtist .search_result, .byTag .search_result
    height 150px !important

.stat 
  margin-top 7px

.radio
  margin-left 10px

.navbar-default .navbar-collapse, .navbar-default .navbar-form
    border: none;
